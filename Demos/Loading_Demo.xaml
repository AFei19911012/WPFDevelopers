<UserControl x:Class="WPFDevelopersDemo.Demos.Loading_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpfdev="https://github.com/WPFDevelopersOrg/WPFDevelopers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Rows="2" Columns="3">
        <wpfdev:RingLoading IsStart="true" Description="WPFDevelopers" Foreground="Black" ProgressValue="50"/>
        
        <wpfdev:BallLoading Width="200"/>
        
        <wpfdev:StreamerLoading>
            <wpfdev:StreamerLoading.Background>
                <SolidColorBrush Color="{DynamicResource PrimaryNormalColor}"/>
            </wpfdev:StreamerLoading.Background>
        </wpfdev:StreamerLoading>
        
        <wpfdev:WaitLoading/>
        
        <wpfdev:CycleLoading  Value="50" LoadTitle="Loading...." Width="200">
            <TextBlock Text="activity"/>
        </wpfdev:CycleLoading>

        <wpfdev:RollLoading IsStart="true" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="200">
            <TextBlock Text="Loading activity..."/>
        </wpfdev:RollLoading>
    </UniformGrid>
</UserControl>
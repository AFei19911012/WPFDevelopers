<UserControl x:Class="WPFDevelopersDemo.Demos.BreatheLight_Demo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpfdev="https://github.com/WPFDevelopersOrg/WPFDevelopers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Columns="2">
        <Border Effect="{StaticResource NormalShadowDepth}" Width="400" Height="140" Background="{StaticResource BackgroundSolidColorBrush}"
                CornerRadius="3">
            <Grid Margin="20,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <wpfdev:BreathLamp Width="60" Height="60" LampEffect="OuterGlow" IsLampStart="true"
                                   VerticalAlignment="Top" HorizontalAlignment="Left"
                                   Background="{DynamicResource DefaultBackgroundPressedSolidColorBrush}" 
                                   EffectColor="{DynamicResource DefaultBackgroundPressedColor}">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="pack://application:,,,/WPFDevelopersDemo;component/Resource/Image/Breathe/2.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </wpfdev:BreathLamp>

                <TextBlock Grid.Column="1" 
                           Margin="10,20"
                           FontSize="{StaticResource MediumFontSize}">
                    <Run Foreground="{StaticResource PrimaryTextSolidColorBrush}">
                        周星星|达叔
                    </Run>
                    <Run Foreground="{StaticResource SuccessPressedSolidColorBrush}">正在直播</Run>
                </TextBlock>
                <Button Style="{StaticResource PrimaryButton}" Grid.Column="1" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom" Content="进入直播"/>
            </Grid>

        </Border>

        <Border Effect="{StaticResource NormalShadowDepth}" Width="400" Height="140" Background="{StaticResource BackgroundSolidColorBrush}"
                CornerRadius="3">
            <Grid Margin="20,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <wpfdev:BreathLamp Width="60" Height="60" LampEffect="Eclipse"  IsLampStart="true"
                                   VerticalAlignment="Top" HorizontalAlignment="Left"
                                   Background="LightGreen" EffectColor="LightGreen">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="../Resource/Image/Breathe/1.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </wpfdev:BreathLamp>

                <TextBlock Grid.Column="1" 
                           Margin="10,20"
                           FontSize="{StaticResource MediumFontSize}"
                           TextWrapping="Wrap">
                    <Run Foreground="{StaticResource PrimaryTextSolidColorBrush}">
                        大话西游之大圣娶亲&#x000A;
                    </Run>
                    <Run Foreground="{StaticResource SuccessPressedSolidColorBrush}">正在直播</Run>
                </TextBlock>
                <Button Style="{StaticResource PrimaryButton}" Grid.Column="1" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom" Content="进入直播" Width="100"/>
            </Grid>
        </Border>
        <Border Effect="{StaticResource NormalShadowDepth}" Width="400" Height="140" Background="{StaticResource BackgroundSolidColorBrush}"
                CornerRadius="3">

            <Grid Margin="20,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <wpfdev:BreathLamp Width="60" Height="60" LampEffect="Ripple"  IsLampStart="true"
                                   VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="../Resource/Image/Breathe/0.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </wpfdev:BreathLamp>

                <TextBlock Grid.Column="1" 
                           Margin="10,20"
                           FontSize="{StaticResource MediumFontSize}">
                    <Run Foreground="{StaticResource PrimaryTextSolidColorBrush}">
                        XXXYYY
                    </Run>
                    <Run Foreground="{StaticResource SuccessPressedSolidColorBrush}">正在直播</Run>
                </TextBlock>
                <Button Style="{StaticResource PrimaryButton}" Grid.Column="1" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom" Content="进入直播" Width="100"/>
            </Grid>
        </Border>

        <Border Effect="{StaticResource NormalShadowDepth}" Width="400" Height="140" Background="{StaticResource BackgroundSolidColorBrush}"
                CornerRadius="3">

            <Grid Margin="20,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <wpfdev:BreathLamp Width="60" Height="60" LampEffect="Streamer"  IsLampStart="True"
                                   VerticalAlignment="Top" HorizontalAlignment="Left" 
                                   GradientStopColor1="#FF00cec9" GradientStopColor2="#2000cec9">
                    <Ellipse Width="53" Height="53">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="../Resource/Image/Chat/UserImages/yanjinhua.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </wpfdev:BreathLamp>

                <TextBlock Grid.Column="1" 
                           Margin="10,20"
                           FontSize="{StaticResource MediumFontSize}">
                    <Run Foreground="{StaticResource PrimaryTextSolidColorBrush}">
                        WPF开发者
                    </Run>
                    <Run Foreground="{StaticResource SuccessPressedSolidColorBrush}">正在直播</Run>
                </TextBlock>
                <Button Style="{StaticResource PrimaryButton}" Grid.Column="1" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom" Content="进入直播" />
            </Grid>
        </Border>
    </UniformGrid>
</UserControl>